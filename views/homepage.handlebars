<!-- Header section text -->
<div class="flex flex-col items-center mx-auto text-center max-w-3xl">
  <h1 class="text-6xl font-bold text-emerald-700 mt-20">The search for your new<br
    />friend starts here.</h1>
  <p class="w-2/3 mt-8">Looking to add a pup to your family? Enter the breed you
    are interested in below to view dogs that are available now for adoption!
  </p>
</div>

<!-- Breed input form - entered value will get passed to API -->
<div class="flex justify-center mt-8">
  <div class="items-center space-x-2">
    <form action="/search" method="get">
      <label for="breedInput" class="leading-6 text-gray-900">Enter a Breed:</label>
      <input
        type="text"
        name="breed"
        class="rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 sm:text-sm sm:leading-6 p-2"
        placeholder="Poodle"
      />
      <button
        type="submit"
        class="bg-emerald-700 text-white border border-gray-400 hover:bg-emerald-800 focus:ring-4 focus:outline-none focus:ring-emerald-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-emerald-600 dark:hover:bg-emerald-700 dark:focus:ring-emerald-800"
      >Search</button>
    </form>
  </div>
</div>
